<?xml version="1.0"?>
<odoo>
        <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">view.hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="arch">
                    <sheet>
                        <group>
                            <field name="name" widget="CopyClipboardChar" />
                            <field name="age"/>
                            <field name="gender" widget="radio" options="{'horizontal': true}" />
                            <field name="blood_type" widget="radio" options="{'horizontal': true}" />
                            <field name="contact_number" widget="phone"/>
                            <field name="email" widget="email"/> 
                            <field name="address" widget="textarea"/>
                            <field name="emergency_contact" widget="phone" />
                            <field name="is_emergency_case" />
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>        

        <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">view.hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="Hospital">
                    <field name="name" />
                    <field name="gender" />
                </tree>
            </field>
        </record>

        <record id="view_hospital_patient_search" model="ir.ui.view">
            <field name="name">view.hospital.patient.search</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <search string="Hospital">
                    <field name="name" />
                    <field name="gender" />
                    <!-- <filter string="Male" name="gender_male" domain="[('gender', '=', 'male')]"/> -->
                    <separator/>
                    <!-- <filter string="Female" name="gender_female" domain="[('gender', '=', 'female')]"/> -->
                    <separator/>
                    <filter string="Kids" name="age" domain="[('age', '&lt;=', 18)]"/>
                    <filter string="Senior Citizon" name="age" domain="[('age', '&gt;=', 60)]"/>
                    <separator/>
                    <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                    <!-- Group By Filter -->
                    <!-- <filter string="Gender" name="gender_group_by" context="{'group_by':'gender'}"/> -->
                    <separator/>
                    <!-- <filter string="Age" name="gender_group_by" context="{'group_by':'age'}"/> -->
                    <searchpanel>
                        <field name="gender" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <!-- Set Default Filter And Group By In Odoo Search View -->
            <!-- <field name="context">{'search_default_gender_male': 1, 'search_default_gender_group_by': 1}</field> -->
        </record>

        <menuitem id="menu_hospital_management" name="Hospital" sequence="1"/>
        <menuitem id="menu_hospital_patient_master" name="Patients" sequence="1" parent="menu_hospital_management"/>
        <menuitem id="menu_hospital_patients_master" name="Patient" sequence="1" parent="menu_hospital_patient_master" action="action_hospital_patient"/>
</odoo>
