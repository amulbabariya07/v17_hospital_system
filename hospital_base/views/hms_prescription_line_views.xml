<odoo>
    <!-- Tree View -->
    <record id="view_hospital_prescription_line_tree" model="ir.ui.view">
        <field name="name">hospital.prescription.line.tree</field>
        <field name="model">hospital.prescription.line</field>
        <field name="arch" type="xml">
            <tree string="Prescription Lines">
                <field name="appointment_id"/>
                <field name="medicine_id"/>
                <field name="dosage"/>
                <field name="frequency"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_prescription_line_form" model="ir.ui.view">
        <field name="name">hospital.prescription.line.form</field>
        <field name="model">hospital.prescription.line</field>
        <field name="arch" type="xml">
            <form string="Prescription Line">
                <sheet>
                    <group>
                        <field name="appointment_id"/>
                        <field name="medicine_id"/>
                        <field name="dosage"/>
                        <field name="frequency"/>
                        <field name="duration"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_prescription_line" model="ir.actions.act_window">
        <field name="name">Prescription Lines</field>
        <field name="res_model">hospital.prescription.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Prescription Line.
            </p>
        </field>
    </record>


    <menuitem id="menu_hospital_prescription" name="Prescriptions" sequence="2"
        parent="menu_hospital_management"/>

    <menuitem id="menu_hospital_prescription_line" name="Prescription Lines"
        parent="menu_hospital_prescription"  sequence="1" action="action_hospital_prescription_line"/>
</odoo>
